{{!
    @template theme_vorsprung/secure

    Boost Vorsprung secure layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page

      Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         }
    }
}}
{{> theme_boost_vorsprung/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    {{>theme_boost_vorsprung/navbar-secure}}

    <div id="page" class="container-fluid">
        {{! Secured full header }}

        <div id="page-header" class="row">
            <div class="col-12 py-3">
                <div class="page-context-header">
                    <div class="page-header-headings">
                        {{{ output.page_heading }}}
                    </div>
                </div>
            </div>
        </div>

        <div id="page-content" class="row">
            <div id="region-main-box" class="col-12">
                <section id="region-main" {{#hasblocks}}class="has-blocks"{{/hasblocks}} aria-label="{{#str}}content{{/str}}">

                    {{{ output.course_content_header }}}
                    {{{ output.main_content }}}
                    {{{ output.course_content_footer }}}

                </section>
                {{#hasblocks}}
                <section data-region="blocks-column" aria-label="{{#str}}blocks{{/str}}">
                    {{{ sidepreblocks }}}
                </section>
                {{/hasblocks}}
            </div>
        </div>
    </div>
    <footer id="page-footer" class="py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-sm-4 col-12">
                    <a href="https://www.auswaertiges-amt.de/de" target="_blank"><img class="ml-1 mr-1 my-1" src="/theme/boost_union_vorsprung/pix/logos/aa-logo.svg"></a>
                    <a href="https://www.daad.de/de/" target="_blank">
                        <img class="d-inline-block d-sm-none d-lg-inline-block ml-1 mr-1 my-1" src="/theme/boost_union_vorsprung/pix/logos/daad-logo.svg">
                        <img class="d-none d-sm-inline-block d-lg-none ml-1 mr-1 my-1" src="/theme/boost_union_vorsprung/pix/logos/daad-logo-no-text.svg">
                    </a>
                </div>
                <div class="col-lg-7 col-sm-8 col-12 pt-2 pt-sm-0 item-icons">
                    {{# output.course_footer }}
                        <div id="course-footer">{{{ output.course_footer }}}</div>
                    {{/ output.course_footer }}
                    {{{ output.standard_end_of_body_html }}}
                    <div class="tool_usertours-resettourcontainer"></div>
                </div>
            </div>
        </div>
    </footer>

</div>


</body>
</html>
{{#js}}
M.util.js_pending('theme_boost_vorsprung/loader');
require(['theme_boost_vorsprung/loader'], function() {
    M.util.js_complete('theme_boost_vorsprung/loader');
});
{{/js}}
